<head>
  <title>Add product</title>
</head>
<br>
<br>
<br>

    <form action="/admin/addPage/add" method="post" id = "formAdd" class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4 w-3/12	 mx-auto " >
      
          <label class="block text-grey-darker text-sm font-bold mb-2 leading-tight focus:outline-none focus:shadow-outline" for="fname" >Product Name</label>

          <input type="text" class="shadow appearance-none border rounded w-full py-2 px-3 text-grey-700" id="pname" name="pname" required>

          <label class="block text-grey-darker text-sm font-bold mb-2 leading-tight focus:outline-none focus:shadow-outline" >Price</label>

          <input type="text" class="shadow appearance-none border rounded w-full py-2 px-3 text-grey-700" id="price" name="price" required>

          <label class="block text-grey-darker text-sm font-bold mb-2 leading-tight focus:outline-none focus:shadow-outline" >Size</label>
 
          <input type="text" class="shadow appearance-none border rounded w-full py-2 px-3 text-grey-700" id="size" name="size" required>
 
          <label class="block text-grey-darker text-sm font-bold mb-2 leading-tight focus:outline-none focus:shadow-outline" >Category</label>
 
          <select class="shadow appearance-none border rounded w-full py-2 px-3 text-grey-700" id="cat" name="cat" required>
          <% 
            category.forEach(c => { 
          %>
          <option value=<%-c.code %> > 
              <%= c.catName%> 
          </option>
          <%
        })%>
          </select>

          <label class="block text-grey-darker text-sm font-bold mb-2 leading-tight focus:outline-none focus:shadow-outline" >Image</label>
   
          <input type="text" class="shadow appearance-none border rounded w-full py-2 px-3 text-grey-700" id="image" name="image" required> 
      
          <label class="block text-grey-darker text-sm font-bold mb-2 leading-tight focus:outline-none focus:shadow-outline" >Description</label>

          <input type="text" class="shadow appearance-none border rounded w-full py-2 px-3 text-grey-700" id="desc" name="desc" required>
          <div class="text-center">
            <br>
          <input type="submit" class="btn-primary rounded-full text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" value= "Add Product">
          </div>

    </form>
  
