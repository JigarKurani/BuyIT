<head>
  <title>Add product</title>
</head>
<br>
<br>
<br>

    <form action="/admin/addPage/add" enctype="multipart/form-data" method="post" id = "formAdd" class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4 w-3/12	 mx-auto " >
      <% if (messages.success) { %>
        <span class="text-blue-500 text-sm"><%= messages.success %> </span> <br>
      <% }
      else if (messages.error) { %>
        <span class="text-red-500 text-sm"><%= messages.error %> </span> <br>
      <% } %>
          <label class="block text-grey-darker text-sm font-bold mb-2 leading-tight focus:outline-none focus:shadow-outline" for="fname" >Product Name</label>

          <input type="text" class="shadow appearance-none border rounded w-full py-2 px-3 text-grey-700" id="pname" name="pname" pattern="[a-zA-Z ]{0,10}" required>

          <label class="block text-grey-darker text-sm font-bold mb-2 leading-tight focus:outline-none focus:shadow-outline" >Price</label>

          <input type="text" class="shadow appearance-none border rounded w-full py-2 px-3 text-grey-700" id="price" name="price" pattern="[0-9]{0,10}" required>

          <label class="block text-grey-darker text-sm font-bold mb-2 leading-tight focus:outline-none focus:shadow-outline" >Size(Seperated by ':')</label>
 
          <input type="text" class="shadow appearance-none border rounded w-full py-2 px-3 text-grey-700" id="size" name="size" pattern="[a-zA-Z:]{0,10}" required>
 
          <label class="block text-grey-darker text-sm font-bold mb-2 leading-tight focus:outline-none focus:shadow-outline" >Category</label>
 
          <select class="shadow appearance-none border rounded w-full py-2 px-3 text-grey-700" id="cat" name="cat"required>
          <% 
            category.forEach(c => { 
          %>
          <option value=<%-c.code %> > 
              <%= c.catName%> 
          </option>
          <%
        })%>
          </select>

          <label class="block text-grey-darker text-sm font-bold mb-2 leading-tight focus:outline-none focus:shadow-outline" >Image</label>
          
          <input type="file" class="shadow appearance-none border rounded w-full py-2 px-3 text-grey-700" id="image" name="imageUpload"  required> 
      
          <label class="block text-grey-darker text-sm font-bold mb-2 leading-tight focus:outline-none focus:shadow-outline" >Description</label>

          <input type="text" class="shadow appearance-none border rounded w-full py-2 px-3 text-grey-700" id="desc" name="desc"pattern="[a-zA-Z0-9 ]{0,60}" required>
          <div class="text-center">
            <br>
          <input type="submit" class="btn-primary rounded-full text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" value= "Add Product">
          </div>

    </form>
  
