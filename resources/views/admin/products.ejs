<head
  ><link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" integrity="sha512-iBBXm8fW90+nuLcSKlbmrPcLa0OT92xO1BIsZ+ywDWZCvqsWgccV3gFoRBv0z+8dLJgyAHIhR35VZc2oM/gI1w==" crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>
  <h1><a class="btn btn-secondary" href="/admin/addPage" > <button class="btn-primary rounded-full text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline">Add a new product</button> </a></h1>
  <% if (messages.success) { %>
    <span class="text-blue-500 text-sm"><%= messages.success %> </span> <br>
  <% }
  else if (messages.error) { %>
    <span class="text-red-500 text-sm"><%= messages.error %> </span> <br>
  <% } %>
  <%
   
  %>
<table class="order-table w-full table-auto bg-white mt-6">
    <thead>
        <tr>
            <th class="text-xl">Image</th>
            <th class="text-xl">Name</th>
            <th class="text-xl">Price</th>
            <th class="text-xl">Size</th>
            <th class="text-xl">Category</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
       <% products.forEach(product => {%>
        <tr>
            <td><img src="/img/<%=product.image%> " height="100px" width="100px" alt="Product"></td>
            <td><%=product.name%></td>
            <td><%=product.price%></td>
            <td><%=product.size%></td>
            <td><%=product.category%></td>

            <td>
                <a href="/admin/products/edit/?id=<%=product.id%>"><i class="far fa-edit fa-lg" aria-hidden="true"></i></a>
                <a href="/admin/products/delete/?id=<%=product.id%>" onclick="return confirm('Are you sure to delete this record ?');"><i class="fa fa-trash fa-lg" aria-hidden="true"></i></a>
            </td>
        </tr>
        <%})%>
    </tbody>
</table>

<footer>




  <form action="/admin/products" method = "post">

    <div class="size-choose mt-6">

      <% 
      let i;
      
      for(i=1;i < pages; i++){
      if(i==page){%>
          <input type="radio" id=<%=i%> class = "sizeRadio" name="page" value="<%=i%>" onclick="this.form.submit()" checked>
          <%}
        else{%>
          <input type="radio" id=<%=i%> class = "sizeRadio" name="page" onclick="this.form.submit()" value="<%=i%>">
          <%}%>
        <label for=<%=i%>><%=i%></label>

     
      <%}%>
    

</form>
</footer>